@page "/reviews"
@inject RestaurantService RestaurantService
@using Boolk.Repositories.Interfaces

<PageTitle>Reviews - Boolk</PageTitle>

<h1>Reviews</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Add New Review</h2>
            <EditForm Model="@newReview" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label">Restaurant ID:</label>
                    <InputText @bind-Value="restaurantIdInput" class="form-control" placeholder="Enter restaurant GUID" />
                </div>
                <div class="mb-3">
                    <label class="form-label">User ID:</label>
                    <InputText @bind-Value="userIdInput" class="form-control" placeholder="Enter user GUID" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Price:</label>
                    <InputNumber @bind-Value="newReview.Price" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Satiety Level (1-10):</label>
                    <InputNumber @bind-Value="newReview.SatietyLevel" class="form-control" min="1" max="10" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Comment:</label>
                    <InputTextArea @bind-Value="newReview.Comment" class="form-control" rows="3" />
                </div>
                <button type="submit" class="btn btn-primary">Add Review</button>
            </EditForm>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-info mt-3">@message</div>
    }
</div>

@code {
    private Review newReview = new Review();
    private string restaurantIdInput = "";
    private string userIdInput = "";
    private string message = "";

    private async Task HandleSubmit()
    {
        try
        {
            if (Guid.TryParse(restaurantIdInput, out var restaurantId) && 
                Guid.TryParse(userIdInput, out var userId))
            {
                newReview.RestaurantId = restaurantId;
                newReview.UserId = userId;
                await RestaurantService.AddReview(newReview);
                message = "Review added successfully!";
                newReview = new Review();
                restaurantIdInput = "";
                userIdInput = "";
            }
            else
            {
                message = "Invalid GUID format for Restaurant ID or User ID";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }
}

