@page "/restaurants"
@inject RestaurantService RestaurantService

<PageTitle>Restaurants - Boolk</PageTitle>

<h1>Restaurants</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Add New Restaurant</h2>
            <EditForm Model="@newRestaurant" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label">Type:</label>
                    <InputSelect @bind-Value="restaurantType" class="form-control">
                        <option value="">Select type...</option>
                        <option value="fastfood">Fast Food</option>
                        <option value="studentbar">Student Bar</option>
                        <option value="premium">Premium</option>
                    </InputSelect>
                </div>
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <InputText @bind-Value="newRestaurant.Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">City:</label>
                    <InputText @bind-Value="newRestaurant.City" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Add Restaurant</button>
            </EditForm>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-info mt-3">@message</div>
    }
</div>

@code {
    private RestaurantBase newRestaurant = new FastFoodRestaurant();
    private string restaurantType = "fastfood";
    private string message = "";

    private async Task HandleSubmit()
    {
        try
        {
            await RestaurantService.CreateRestaurant(restaurantType, newRestaurant.Name, newRestaurant.City);
            message = $"Restaurant '{newRestaurant.Name}' added successfully!";
            newRestaurant = new FastFoodRestaurant();
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }
}

